{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12 col-md-6">

                {% block content %}{% endblock %}

            </div>
            <div class="hidden-xs hidden-sm col-md-6">
                <embed id="preview" style="width: 100%; height: 100%;">
            </div>
        </div>
    </div>

{% endblock %}
